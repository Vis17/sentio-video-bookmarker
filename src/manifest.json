{
	"manifest_version": 2,
	"name": "Sentio - Video-Bookmarker",
	"short_name": "Sentio",
	"version": "1.0.0.6",
	"author": "tametsi",
	"homepage_url": "https://github.com/tametsi/sentio-video-bookmarker",

	"description": "Sentio is a Firefox-Addon that lets you create Video-Bookmarks ðŸ“º. Bookmark a video and Sentio will save ðŸ’¾, to which point ðŸ•” you have watched the video. This means, you can start watching your video where you stopped last time â–¶.",

	"icons": {
		"48": "icons/icon.svg",
		"96": "icons/icon.svg"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content_script.js"]
		}
	],

	"browser_action": {
		"default_icon": "icons/icon-light.svg",
		"default_title": "Overview | Sentio - Video-Bookmarker",
		"default_popup": "browser_popup.html"
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},

	"permissions": ["storage", "<all_urls>"],

	"optional_permissions": ["bookmarks"],

	"browser_specific_settings": {
		"gecko": {
			"strict_min_version": "85.0"
		}
	}
}
