{
	"manifest_version": 2,
	"name": "Sentio - Video bookmarker",
	"version": "0.1.0",

	"description": "Sentio is a Firefox-Addon that lets you create Video-Bookmarks ðŸ“º. Bookmark a video and Sentio will save ðŸ’¾, to which point ðŸ•” you have watched the video. This means, you can start watching your video where you stopped last time â–¶.",

	"icons": {
		"48": "icons/icon.svg",
		"96": "icons/icon.svg"
	},

	"background": {
		"scripts": ["background.js"]
	},

	"content_scripts": [
		{
			"matches": ["<all_urls>"],
			"js": ["content_script.js"]
		}
	],

	"page_action": {
		"default_icon": "icons/icon-light.svg",
		"default_title": "Bookmark | Sentio - Video bookmarker",
		"default_popup": "page_popup.html"
	},

	"browser_action": {
		"default_icon": "icons/icon-light.svg",
		"default_title": "Overview | Sentio - Video bookmarker",
		"default_popup": "browser_popup.html"
	},

	"options_ui": {
		"page": "options.html",
		"open_in_tab": true
	},

	"permissions": ["storage", "tabs"]
}
