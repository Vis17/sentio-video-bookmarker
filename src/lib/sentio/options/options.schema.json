{
	"$schema": "https://json-schema.org/draft/2020-12/schema",

	"title": "Options",
	"type": "object",
	"properties": {
		"$schema": { "type": "string" }
	},
	"patternProperties": {
		"^.*$": {
			"type": "object",
			"title": "Option",
			"description": "A option in Sentio",

			"properties": {
				"type": {
					"type": "string",
					"enum": ["checkbox"],
					"description": "The type of the option"
				},
				"title": {
					"type": "string",
					"description": "The title of the option"
				},
				"description": {
					"type": "string",
					"description": "The description of the option \n(optional)"
				}
			},
			"required": ["type", "title"]
		}
	},
	"additionalProperties": false
}
